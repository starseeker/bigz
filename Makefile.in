.SUFFIXES: .cpp .lsp .dat $(.SUFFIXES)

CC		= @CC@
CPP		= @CXX@
AR		= @AR@
O		= @OBJEXT@
RANLIB		= @RANLIB@
SOEXT		= @SOEXT@
AEXT		= @AEXT@
EXE		= @EXEEXT@
ARFLAGS		= @AROPTS@
DEBUG		=
CFLAGS		= @CFLAGS@ @OPTIMS@ @WARNINGS@ -I. -DHAVE_CONFIG_H
CXXFLAGS	= @CXXFLAGS@
LIBS		= @LIBS@
KERN		= kern
KRNLIB		= libkern.$(AEXT)
KRNSHARED	= libkern.$(SOEXT)
LISP		= clisp
OBJECT		= bigq.$(O) bigz.$(O) bign.$(O)
VERSION		= @VERSION@

BINARIES	= $(KRNLIB) bztest$(EXE) testkern$(EXE) \
		  @NOCXX@tCBignum$(EXE)

all: $(BINARIES) tests

.c.$(O):
	@echo $*.c
	@$(CC) -c $(CFLAGS) $*.c

.cpp.$(O):
	@echo $*.cpp
	@$(CPP) -c $(CFLAGS) $(CXXFLAGS) $*.cpp

# KerN lib

bign.$(O): bign.c bign.h
bigz.$(O): bigz.c bigz.h bign.h
bign.$(O): bigq.c bigq.h bigz.h bign.h

$(KRNLIB): $(OBJECT)
	@rm -f $(KRNLIB)
	@$(AR) $(ARFLAGS) $(KRNLIB) $(OBJECT)
	-@$(RANLIB) $(KRNLIB)

# KerN test

testkern.$(O): bign.h test/testkern.c
	@$(CC) -c $(CFLAGS) -Itest test/testkern.c

testkern$(EXE): $(KRNLIB) testkern.$(O)
	@$(CC) $(CFLAGS) -o testkern$(EXE) testkern.$(O) -L. -l$(KERN) $(LIBS)

# BZ test

bztest$(EXE): $(KRNLIB) bztest.$(O)
	@$(CC) $(CFLAGS) -o bztest$(EXE) bztest.$O  -L. -l$(KERN)

bztest.$(O): test/bztest.c bigz.h bign.h
	@$(CC) -c $(CFLAGS) -Itest test/bztest.c

# C++ test

tCBignum$(EXE): $(KRNLIB) CBignum.$(O) CRational.$(O) tCBignum.$(O)
	@$(CPP) $(CFLAGS) -o tCBignum$(EXE) \
		tCBignum.$(O) CBignum.$(O) CRational.$(O) \
		-L. -l$(KERN)

tCBignum.dat: ./lisp/gentest.lsp
	@echo generating tests with $(LISP)..
	@$(LISP) ./lisp/gentest.lsp > tCBignum.cpp

CBignum.$(O): CBignum.h CBignum.cpp bigz.h bign.h

tCBignum.$(O): CBignum.h tCBignum.cpp tCBignum.dat bigz.h bign.h

CRational.$(O): CRational.h CRational.cpp bigz.h bign.h bigq.h

# Misc

tests:
	./testkern a
	./bztest
	@NOCXX@./tCBignum

clean:
	@-rm -f bztest$(EXE) testkern$(EXE) tCBignum$(EXE) *.$(O) *.$(AEXT)
	@-rm -f \#* *.BAK *~

valgrind:  testkern$(EXE) tCBignum$(EXE)
	@valgrind \
		--leak-check=summary \
		--track-fds=yes \
		--log-file=testkern.log \
		./testkern$(EXE) a
	@tail -10 testkern.log
	@echo Consult testkern.log for full log...
	@valgrind \
		--leak-check=summary \
		--track-fds=yes \
		--log-file=tCBignum.log \
		./tCBignum$(EXE)
	@tail -10 tCBignum.log
	@echo Consult tCBignum.log for full log...

