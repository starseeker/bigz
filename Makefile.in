#	set LARCH_PATH=/usr/share/splint/lib
#	Very strict rules for kernel
	@splint +quiet			\
		-checks 		\
		-exportlocal 		\
		-infloopsuncon		\
		-namechecks 		\
	        bign.c
#	Check bigz.c and (again) bign.c
	@splint +quiet			\
		-checks 		\
		-branchstate 		\
		-compdef 		\
		-exportlocal		\
		-infloopsuncon		\
		-namechecks		\
		-nullret 		\
		-retalias 		\
		-statictrans 		\
		-observertrans		\
		-temptrans 		\
		-usedef			\
	        bigz.c bign.c
	@splint +quiet			\
		-checks 		\
		-branchstate 		\
		-compdef 		\
		-declundef		\
		-exportlocal 		\
		-infloopsuncon		\
		-namechecks 		\
		-nullret 		\
		-mustfreefresh 		\
		-realcompare		\
		-realrelatecompare	\
		-temptrans 		\
	        bigq.c

